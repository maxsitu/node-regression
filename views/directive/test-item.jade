doctype html
div.test-item
    div(ng-if="!itemNode.children", )
        a {{itemNode.label}}
        button(ng-click="kickOff(itemNode, $event)", ng-disabled="itemNode.running", ng-class="{disabled : itemNode.running}") Run
        button(ng-click="toggleVisible()") Info
        div(ng-show="isVisible")
            text cmd: {{itemNode.cmd}}
            br
            text rc:      {{itemNode.rc}}
            br
            text running: {{itemNode.running}}

    div(ng-if="itemNode.children || !itemNode.cmd")
        a {{itemNode.label}}
        button(ng-show='itemNode.children', ng-click="kickOff(itemNode, $event)", ng-disabled="isRunning(itemNode)", ng-class="{disabled : isRunning(itemNode)}") Run
